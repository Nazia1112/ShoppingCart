<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>User Profile</h1>
            <hr>
            <h2>My Order</h2>
            {{# each orders}}
            <div class="card">
                
                <div class="card-body">
                    <ul>
                        {{# each this.items}}
                        <li>
                            <span class="badge">{{this.price}}</span>
                            <p class="card-text">{{this.item.title}} || {{this.qty}} Units</p>
                        </li> 
                        {{/each}}                       
                    </ul>                 
                    
                </div>
                <div class="card-footer">
                   <strong>Total Price: $ {{this.cart.totalPrice}}</strong>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>