<br>
<div class="container">
{{# each products}}
<div class="row">
  {{# each this}}
    <div class="col-sm-6 col-md-4">
        <div class="card" style="width: 18rem;">
  <img class="card-img-top" src={{this.imagePath}} alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">{{this.description}}</p>
    <div class="text-left">
      $<b>{{this.price}}</b>
    <a href="/"{{this._id}}" class="btn btn-info" style="float: right;">Add to Shopping Cart</a>
    </div>
  </div>
</div><br>
    </div>
    {{/each}}
</div>
{{/each}}
</div>



